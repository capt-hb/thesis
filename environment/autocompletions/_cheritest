#compdef _cheritest cheritest

function _thesis_test {
    local prefix="test_"
    local suffix=".py"
    local files=$(find $CHERI/cheritest/tests/uninitialized_capabilities/ \
		       -name '*.py' -printf "%f\n" | sort)
    local purecap_files=$(find $CHERI/cheritest/tests/purecap/ \
			       -name '*_calling_convention.py' -printf "%f\n" | sort)
    local -a testcmds
    local tmp=""

    while read line; do
	tmp=${line#"$prefix"}
	tmp=${tmp%"$suffix"}
	testcmds+=$tmp
    done <<< $files

    while read line; do
	tmp=${line#"$prefix"}
	tmp=${tmp%"$suffix"}
	testcmds+=$tmp
    done <<< $purecap_files

    _describe 'command' testcmds
}
